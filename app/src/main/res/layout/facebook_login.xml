<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Facebook"
            android:textSize="14dp"
            android:textAlignment="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de celular o correo electronico"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FacebookGray"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="bottom"
            android:textSize="28sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase単a"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FacebookGray"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="bottom"
            android:textSize="28sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Iniciar sesion"
            android:backgroundTint="@color/FacebookBrightBlue"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多Olvidaste tu contrase単a?"
            android:textSize="12dp"
            android:textColor="@color/FacebookBlue"
            android:layout_margin="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="6dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="12dp"
                android:layout_marginHorizontal="6dp"
                android:textColor="@color/FacebookBlue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="6dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Crear nueva cuenta"
            android:backgroundTint="@color/FacebookGreen"
            android:layout_margin="4dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Espa単ol"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English (US)"
        android:textSize="16dp"
        android:textColor="@color/FacebookBlue"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frances (France)"
        android:textSize="16dp"
        android:textColor="@color/FacebookBlue"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portugues (Brasil)"
        android:textSize="16dp"
        android:textColor="@color/FacebookBlue"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Italiano"
        android:textSize="16dp"
        android:textColor="@color/FacebookBlue"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas idiomas"
        android:textSize="16dp"
        android:textColor="@color/FacebookBlue"
        android:layout_margin="4dp"/>

</LinearLayout>